{% if image %}
    <figure>
        <a href="{{ record|image }}">
            <img src="{{ thumbnail(record, 1368, 1026) }}" alt="{{ (record|image).alt|default(record|title) }}">
        </a>
        {% if image.alt|default() %}
            <figcaption>{{ image.alt }}</figcaption>
        {% endif %}
    </figure>
{% endif %}
