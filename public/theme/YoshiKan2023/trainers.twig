{% extends 'partials/_master.twig' %}

{% block main %}

    {# banner ----------------------------------------------------------- #}
    <div>
        <img src="{{ asset('img/banner_7.jpg') }}"
             class="w-full" alt="Yoshi Kan, judoschool voor jong en oud."
             border="0"/>
    </div>

    {# content ----------------------------------------------------------- #}
    <div class="content-wrapper p-2">
        <div class="p-2">
            <h3>Over ons</h3>
            <hr>
        </div>
        <div>
            {% for trainer in records %}
                <article>
                    <div class="md:flex p-2">
                        <div class="md:w-1/2">
                            {% if (trainer.image) %}
                                <img src="{{ thumbnail(trainer.image, 400, 267) }}"
                                     width="400"
                                     alt="{{ (trainer|image).alt|default(trainer|title) }}"
                                     border="0"/>
                            {% endif %}
                        </div>
                        <div class="md:w-1/2">
                            <h3>{{ trainer|title }}</h3>
                            <div class="text-sm">
                                {{ trainer.content | raw }}
                            </div>
                        </div>
                    </div>
                    {% if not loop.last %}
                        <hr>
                    {% endif %}
                </article>
            {% endfor %}
        </div>
    </div>

{% endblock main %}
