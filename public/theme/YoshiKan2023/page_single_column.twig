{% extends 'partials/_master.twig' %}

{% block main %}
    {% if record|default %}

        <div class="banner">
            {% include 'partials/_image.twig' with ({'image': record|image}) %}
        </div>

        <div class="content-wrapper p-10">
            <h3>{{ record|title }}</h3>
            <div>
                {{ record.body }}
            </div>
        </div>

    {% endif %}
{% endblock main %}
